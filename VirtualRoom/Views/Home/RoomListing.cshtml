@using VirtualRoom.Models
@model IEnumerable<RoomModel>
<nav class="navbar navbar-default navbar-static-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Virtual room</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>
            <button type="button" class="btn btn-default navbar-btn">Remove room</button>
        </ul>
    </div><!--/.nav-collapse -->
</nav>
<div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        @RenderRooms()
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content" id="addModal">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add room</h4>
            </div>
            <div class="modal-body">
                <input type="text" ng-model="add.name"></input>
                <input type="text" ng-model="add.desc"></input>
                <input type="text" ng-model="add.cap"></input>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="addRoom(add.name, add.desc, add.cap)">Submit</button>
            </div>
        </div>
    </div>
</div>

@helper RenderRooms()
{
foreach (var room in Model)
{
        @RenderRoom(room);
    }
}

@helper RenderRoom(RoomModel rM)
{
    <div class="col-lg-2 col-md-4 col-sm-6 tile-external">
        <div class="tile">
            <div class="room-card" id="@rM.RoomID">
                <div class="front" style="background-color:black;">
                    <img src="~/icons/agenda.svg" />
                    <span class="col-lg-12 col-md-12 col-sm-12">@rM.Name</span>
                </div>
                <div class="back" style="background-color:black;">
                    <h4 class="col-lg-12 col-md-12 col-sm-12">@rM.Name.ToString()</h4>
                    <span class="col-lg-12 col-md-12 col-sm-12">@rM.Description</span>
                    <a href="/Home/Room/@rM.RoomID"> Enter Room</a>
                </div>
            </div>
        </div>
    </div>
}
