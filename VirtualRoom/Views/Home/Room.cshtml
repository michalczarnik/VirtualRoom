@using VirtualRoom.Models
@model RoomModel
<div class="title">
    <h2>
        @Model.Name
    </h2>
</div>
<div class="header">
    <button type="button" class="btn btn-lg removeRoom">Remove room</button>
    <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#myModal">Change room information</button>
</div>
<div class="container">
    <div class="room">
        
    </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Change room information</h4>
            </div>
            <div class="modal-body">
                <label>Room name:</label><input type="text" class="input-box" name="name" value="@Model.Name" /><br />
                <label>Room description:</label><input type="text" class="input-box" name="description" value="@Model.Description" /><br />
                <label>Room capacity:</label><input type="number" class="input-box" name="capacity" value="@Model.Capacity" /><br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-left">Accept</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function (){
        $(".removeRoom").click(function () {
            var roomId = "@Model.RoomID";
            $.ajax({
                type: 'POST',
                url: '/api/roomapi/removeroom',
                data: '{"roomid":"'+roomId+'"}', // or JSON.stringify ({name: 'jonas'}),
                success: function (data) { alert('data: '); },
                contentType: "application/json",
                dataType: 'json'
            });
        });
    });
</script>